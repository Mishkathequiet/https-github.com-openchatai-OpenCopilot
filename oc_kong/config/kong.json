{
  "_format_version": "2.1",
  "_transform": true,
  "services": [
    {
      "name": "llm-server",
      "url": "http://llm-server:8002",
      "routes": [
        {
          "paths": ["/workflow/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        },
        {
          "paths": ["/swagger_api/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        },
        {
          "paths": ["/uploads/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        },
        {
          "paths": ["/data_sources/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        },
        {
          "paths": ["/chat/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        }
      ]
    },
    {
      "name": "backend",
      "url": "http://backend:5000/",
      "routes": [
        {
          "paths": ["/backend/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        }
      ]
    },
    {
      "name": "dashboard",
      "url": "http://dashboard:8000",
      "routes": [
        {
          "paths": ["/dashboard/"],
          "strip_path": false
        },
        {
          "paths": ["/llm/"],
          "strip_path": true,
          "plugins": [
            {
              "name": "key-auth"
            }
          ]
        },
        {
          "paths": ["/"],
          "strip_path": false
        }
      ]
    }
  ]
}
